include common/_mixins
include common/_settings
block variables

doctype html
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(content="ie=edge" http-equiv="x-ua-compatible")
        meta(content="width=device-width, initial-scale=1" name="viewport")

        title Vkusita | #{title}
        link(rel='stylesheet' href='css/vendor.min.css')
        link(rel='stylesheet' href='css/main.css')
    body
        .wrapper

            //- header
            header.header
                .container
                    //- top
                    .header__top

                        //- nav
                        .header__nav
                            nav.nav
                                each val in nav
                                    if(val.sub)
                                        .nav__item.nav__item_sub
                                            a(href=val.link).nav__link= val.title
                                            .nav__sub
                                                .subnav
                                                    each subval in val.sub
                                                        a(href=subval.link).subnav__item= subval.title
                                    else
                                        div().nav__item
                                            a(href=val.link).nav__link= val.title




                        //- cabinet
                        .header__cabinet
                            .cabinet-link
                                +icon('001-twitter', 'cabinet-link__icon')


            //- pages
            .page
                .container
                    block content

            //- footer
            footer.footer

